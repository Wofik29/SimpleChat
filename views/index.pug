extends layout

block content
    div(class='container')
        h1= title
        p Welcome to #{title}
        div(class='row')
            div(class='col border border-secondary' id='messages')
                    p Hello
        div(class='clearfix' style='padding-bottom:5px')
        div(class='row')
            div(class='col')
                form(action='')
                    div(class='form-group')
                        textarea(class='form-control' rows='4' id='message')
                    div(class='form-group')
                        button(class='btn btn-primary') Submit
